extend layout
block main
  .container.maincontent
        .row
          .items
            each item in items
              .col-md-3.item-container
                a(href='/items/#{item._id}')
                  img(class=['img-responsive', 'img-hover', 'thumbnail'] src='#{item.photoURL}')
                .caption
                  a(href='/items/#{item._id}') #{item.itemName}
                  p #{item.description}



