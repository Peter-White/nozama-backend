extend layout
block main
  .container.maincontent
    .row
      .col-lg-12
        .row
          .items
            each item in items
              img(class=['img-responsive', 'img-thumbnail'] src='#{item.photoURL}' width='400px')
              h3 #{item.itemName}
              p #{item.description}
              h4 price: $ #{item.price}
              .btn-group
                form(method="post" action="/auth")
                  button.btn.btn-default(type="submit" value= '#{item._id}') add to
                    span(class='glyphicon glyphicon-shopping-cart' )
                  a.btn.btn-default(href='/items/') back to catalog

