extends layout

block main
    header.cd-header
        #cd-logo
          a(href='/')
            img(src='/assets/noun_90169_cc.png', alt='Logo')
        nav.cd-primary-nav
          ul
            if (user)
                li#current-user(data-user-id='#{user._id}')
                  a(href="/users/#{user._id}") Hi #{user.username} (My Account)
                li
                  a(href="/auth/logout") Logout
                li
                  a(href='#')
                    span(class='glyphicon glyphicon-shopping-cart')
              else
                li
                  a(href="/auth/login") Login
                li
                  a(href="/auth/register") Register
            li
              a(href='#0') Search
    .container.maincontent
        .row
            .col-lg-12
                h1 Please login
                form(role="form", action="/auth/login", method="post")
                    .form-group
                        label(for="username") Username
                        input#username.form-control(name="username", type="text")
                    .form-group
                        label(for="password") Password
                        input#password.form-control(name="password", type="password")
                    p
                        a.btn.btn-link(href="/contacts") Cancel
                        button.btn.btn-default(type="submit", value="Log In") Log in
