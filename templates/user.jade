extend layout
block main
  h3 My Account
    .container.maincontent
      .row
        .col-lg-12
          .row
            .user(data-user="#{user.id}")
              p Name: #{user.firstName} #{user.lastName}
              p Email Address: #{user.emailAddress}
              p Phone Number: #{user.phoneNumber}
              for address in user.address
                p Address Type: #{address.addressType}:
                  p Street: #{address.street} #{address.secondStreet},
                  p City State Zipcode: #{address.city}, #{address.state}, #{address.zipCode}
                  p Country: #{address.country}
              .btn-group
                button.btn.btn-default(id="edit-user-details") Edit Account Details
  include update-user-form.jade

