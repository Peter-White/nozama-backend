extend layout
block main
  h1 Users
  .users
    for user in users
      h3 Name: #{user.firstName} #{user.lastName}
      if (user.emailAddresses.length > 0)
        h4 Email Addresses:
        for email in user.emailAddresses
          p #{email.emailAddress}
      if (user.phoneNumbers.length > 0)
        h4 Phone Numbers:
        for phone in user.phoneNumbers
          p #{phone.phoneNumber}
      if (user.addresses.length > 0)
        h4 Addresses:
        for address in user.addresses
          p #{addressType}:
          p #{address.street} #{address.secondStreet},
          p #{address.city}, #{address.state}, #{address.zipCode}
          p #{address.country}

